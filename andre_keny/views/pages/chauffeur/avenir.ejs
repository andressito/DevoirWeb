<!doctype html>
<html lang="fr">
	<head>
	  <% include ../../partials/head %>
	</head>
	<body class="container">

		<header>
			<% include ../../partials/headerchauffeur %>
		</header>

		<main>
			<div class="jumbotron">
				<div class="container">
					<div class="row">
						<div class="col-lg-2">
							
						</div>
						<div class="col-lg-8">
							<% if ( mess.length>0) { %>
      							<div class="alert alert-info">
									<strong>Info!</strong> <%= mess %> 
								</div>
							<% } %>
						</div>
					</div>
      				<div  class="row">
      					<div class="col-lg-3">
      						
      					</div>
      					<div class="col-lg-8 login-sec">
							<%if (course != null) { %>
									<form class="form-group" method="post" action="/demarrer">
										<% for(var i=0; i<course.length ; i++){%>
											<input type="radio" name="course" value="<%=course[i].CourseID%>"  required /> 
											 <b>Date: </b> <%=course[i].date%>   <b>Départ:</b> <%=course[i].lieu_depart%>  <b>Arrivée:</b> <%= course[i].lieu_darrivee%> <br>
										<% } %>
										<button class="btn btn-login float-right" type="submit">Démarrer</button>
									</form>
							<% } %>
      					</div>
				</div>
			</div>
		</main>

		<footer>
			<% include ../../partials/footer %>
		</footer>

	</body>
</html>
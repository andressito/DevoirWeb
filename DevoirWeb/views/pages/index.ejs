<!doctype html>
<html lang="fr">
	<head>
	  <% include ../partials/head %>
	</head>
	<body class="container">

		<header>
			<% include ../partials/headerhome %>
		</header>

		<main>
			<div class="jumbotron">
				<div class="container">
					<div class="row">
						<div class="col-lg-3">
							
						</div>
						<div class="col-lg-6">
							<% if ( mess.length>0) { %>
      							<div class="alert alert-danger">
									<strong>Attention!</strong> <b> <%= mess %> </b>
								</div>
							<% } %>
						</div>
						<div class="col-lg-3">
							
						</div>
					</div>
					<div class="row">
						<div class="col-lg-4 login-sec">
							<h2 class="text-center">Connexion</h2>
							<form class="login-form" method="post" action="/login">
								<div class="form-group">
					  				<label for="login" class="text-uppercase" ><b>Username</b></label>
					    			<input type="text" class="form-control" placeholder="Entrez votre Username" name="login" required>
					    		</div>
				    			<div class="form-group">
					    			<label for="password" class="text-uppercase"><b>Mot de Passe</b></label>
					    			<input type="password" class="form-control" placeholder="Entrez votre mot de passe" name="password" required>
					    		</div>
				    			<div class="form-check">
				    				<input type="radio" class="form-check-input" name="user" value="chauffeur" required /> Connectez vous en tant que Chauffeur <br>
							   		<input type="radio" class="form-check-input" name="user" value="client" required /> Connectez vous en tant que Passager
							   	</div>
							   	<br>
				    			<button class="btn btn-login float-right" type="submit">Connexion</button>
			  				</form>
						</div>
						<div class="col-lg-4 banner-sec">
							<div class="text-center">
							  <img src="http://www.lepoint.fr/images/2017/12/28/12664032lpw-12664048-article-plus-belle-voiture-ds-alpine-jpg_4871261_660x281.jpg" class="img-thumbnail" alt="...">
							</div>
						</div>
						<div class="col-lg-4 login-sec">

							<h2 class="text-center">Inscription</h2>
							
			  				<form class="login-form" method="post" action="/register">
							    <div class="form-group">
							    	<label class="text-uppercase" for="login"><b>Username</b></label>
							    	<input class="form-control" type="text" placeholder="Entrez votre Username" name="login" required>
							    </div>
							    <div class="form-group">
							    	<label class="text-uppercase" for="password"><b>Mot de Passe</b></label>
							    	<input class="form-control" type="password" placeholder="Entrez votre mot de passe" name="password" required>
							    </div>
							    <div class="form-group">
							    	<label class="text-uppercase" for="password2"><b>Mot de Passe</b></label>
							    	<input class="form-control" type="password" placeholder="Retappez votre mot de passe" name="password2" required>
							    </div>
							    <div class="form-check">
							    	<input class="form-check-input" type="radio" name="user" value="chauffeur" required /> Rejoignez nous en tant que Chauffeur  <br>
							    	<input class="form-check-input" type="radio" name="user" value="client" required /> Rejoignez  nous en tant que Passager <br>
						      	</div>
						      	<br>
						      	<button class="btn btn-login float-right" type="submit" class="signupbtn">Inscription</button>
							</form> 
						</div>
					</div>
				</div>
			</div>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>

	</body>
</html>